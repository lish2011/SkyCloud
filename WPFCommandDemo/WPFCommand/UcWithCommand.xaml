<UserControl x:Class="WPFCommand.UcWithCommand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCommand"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.CommandBindings>
        <!--定义命令绑定-->
        <CommandBinding Command="local:DataCommands.Requery" Executed="RequeryCommand_Execute"/>
    </UserControl.CommandBindings>
    <StackPanel>
        <!--应用命令-->
        <Button Name="btnCmd" Margin="5" Command="local:DataCommands.Requery" Content="{Binding RelativeSource={RelativeSource Self}, Path=Command.Text}"></Button>
    </StackPanel>
</UserControl>
